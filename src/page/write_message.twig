{% extends "default.twig" %}

{% block title %}Index{% endblock %}
{% block head %}
    <link rel="stylesheet" href="/static/css/register.css">
{% endblock %}

{% block content %}
    <div class="w3-container w3-content w3-padding-64" style="max-width:800px" id="write_message">
        <form method="post">
            <div class="container">
                <h1>Write your Message</h1>
                <p>Please fill in this form to pusblish a message.</p>
                <hr>
                <label for="email"><b>Tell us</b></label>
                <input type="text" placeholder="Tell us" name="message" id="message" required>
                <button type="submit" class="publishbtn">Publish</button>
        </form>
    </div>
{% endblock %}
